<section id="mensagensSection" class="white-section">
  <div class="container">
    <h1>Deixe sua mensagem para n√≥s</h1>

    <div class="row justify-content-center">
      <div class="col-md-8 mt-5 bg-light rounded">
        <h5 id="mensagemSucesso" class="text-center text-primary" style="display: none">
          Muito obrigado pela mensagem!
        </h5>
        <h5 id="mensagemErro" class="text-center text-danger" style="display: none">
          Ocorreu um erro ao enviar a mensagem, por favor tente novamente!
        </h5>
        <form id="formComment" class="p-2">
          <div class="form-group input-group">
            <input type="text" name="author" class="form-control" placeholder="Informe o seu nome" required>
          </div>
          <div class="form-group input-group">
            <input type="email" name="email" class="form-control" placeholder="Informe o seu email" required>
          </div>
          <div class="form-group input-group">
            <textarea name="mensagem" id="mensagem" class="form-control" placeholder="Escreva sua mensagem" cols="30" rows="6" required></textarea>
          </div>

          <div class="g-recaptcha" data-callback="enableSubmitButton" data-sitekey="<%= googleRecaptchaSitekey %>"></div>

          <div class="form-group">
            <input type="submit" class="btn btn-primary btn-block" value="Enviar">
          </div>
        </form>
      </div>
    </div>

    <!-- Comments -->
    <% include ./comments %>
  </div>
</section>
